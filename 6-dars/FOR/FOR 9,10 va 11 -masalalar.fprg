    <function name="Main" type="None" variable="">
        <parameters/>
        <body>
            <declare name="n, yigindi, i, juft, toq" type="Integer" array="False" size=""/>
            <output expression="&quot;n sonni kiriting: &quot;" newline="True"/>
            <input variable="n"/>
            <assign variable="yigindi" expression="0"/>
