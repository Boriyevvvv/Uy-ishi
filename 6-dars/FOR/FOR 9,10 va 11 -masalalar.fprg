                <then>
                    <for variable="juft" start="0" end="n" direction="inc" step="2">
                        <assign variable="yigindi" expression="yigindi + juft"/>
                        <output expression="&quot;1 sonididan siz kiritgan songacha bo'lgan juft sonlar quyidagilar: &quot; &amp; juft" newline="True"/>
                    </for>
                </then>
                <else>
                    <for variable="toq" start="1" end="n" direction="inc" step="2">
                        <assign variable="yigindi" expression="yigindi + toq"/>
                        <output expression="&quot;1 sonididan siz kiritgan songacha bo'lgan toq sonlar quyidagilar: &quot; &amp; toq" newline="True"/>
                    </for>
                </else>
            </if>
            <output expression="&quot;1 dan siz kiritgan songacha bo'lgan sonlar (agar siz juft son kiritgan bo'lsangiz juft sonlar, agar toq son kiritgan bo'lsangiz toq sonlar) yig'indisi: &quot; &amp; yigindi &amp; &quot; ga teng.&quot;" newline="True"/>
        </body>
    </function>
